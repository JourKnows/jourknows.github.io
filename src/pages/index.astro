---
import { getCollection } from "astro:content";
import Layout from "@layouts/Layout.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import LinkButton from "@components/LinkButton.astro";
import Hr from "@components/Hr.astro";
import Card from "@components/Card";
import Socials from "@components/Socials.astro";
import getSortedPosts from "@utils/getSortedPosts";
import { SOCIALS } from "@config";

const posts = await getCollection("blog");

const sortedPosts = getSortedPosts(posts);
const featuredPosts = sortedPosts.filter(({ data }) => data.featured);
const recentPosts = sortedPosts.filter(({ data }) => !data.featured);

const socialCount = SOCIALS.filter(social => social.active).length;
---

<Layout>
  <Header />
  <main id="main-content">
    <section id="hero" class="hero-container mt-8">
      <div class="flex items-center justify-between flex-wrap gap-4">
        <h1 class="!my-0">
          <img 
            src="https://i.imgur.com/r5nCUdx.png" 
            alt="JourKnows Logo" 
            class="h-12 w-auto sm:h-16 object-contain"
          />
        </h1>
        <a
          target="_blank"
          href="/rss.xml"
          class="rss-link !mb-0 flex items-center gap-2 hover:opacity-80 transition-opacity text-white"
          aria-label="rss feed"
          title="RSS Feed"
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="rss-icon !mb-0 !scale-100"
            ><path
              d="M19 20.001C19 11.729 12.271 5 4 5v2c7.168 0 13 5.832 13 13.001h2z"
            ></path><path
              d="M12 20.001h2C14 14.486 9.514 10 4 10v2c4.411 0 8 3.589 8 8.001z"
            ></path><circle cx="6" cy="18" r="2"></circle>
          </svg>
          <span class="font-medium hidden sm:inline-block">RSS Feed</span>
          <span class="sr-only">RSS Feed</span>
        </a>
      </div>

      <p class="text-lg mt-6 text-white/90 max-w-2xl leading-relaxed">
        <strong>Journalism for All!</strong> Welcome to a platform dedicated to making high-quality, impactful journalism accessible to everyone. We cover the stories that matter most, breaking down complex issues into clear, insightful reporting.
      </p>
      
      <div class="hero-cta-wrapper">
        <a href="/posts" class="hero-btn-primary text-center">
          Read Latest Articles
        </a>
        <a href="/about" class="hero-btn-secondary text-center">
          About Us
        </a>
      </div>

      {
        // only display if at least one social link is enabled
        socialCount > 0 && (
          <div class="social-wrapper mt-8 border-t border-white/20 pt-6">
            <div class="social-links font-medium text-white/80">Connect with us:</div>
            <div class="hero-socials">
              <Socials />
            </div>
          </div>
        )
      }
    </section>

    <Hr />

    {
      featuredPosts.length > 0 && (
        <>
          <section id="featured">
            <h2>Featured</h2>
            <ul>
              {featuredPosts.map(({ data, slug }) => (
                <Card
                  href={`/posts/${slug}/`}
                  frontmatter={data}
                  secHeading={false}
                />
              ))}
            </ul>
          </section>
          {recentPosts.length > 0 && <Hr />}
        </>
      )
    }

    {
      recentPosts.length > 0 && (
        <section id="recent-posts">
          <h2>Recent Posts</h2>
          <ul>
            {recentPosts.map(
              ({ data, slug }, index) =>
                index < 4 && (
                  <Card
                    href={`/posts/${slug}/`}
                    frontmatter={data}
                    secHeading={false}
                  />
                )
            )}
          </ul>
        </section>
      )
    }

    <div class="all-posts-btn-wrapper">
      <LinkButton href="/posts/">
        All Posts
        <svg xmlns="http://www.w3.org/2000/svg"
          ><path
            d="m11.293 17.293 1.414 1.414L19.414 12l-6.707-6.707-1.414 1.414L15.586 11H6v2h9.586z"
          ></path>
        </svg>
      </LinkButton>
    </div>
  </main>

  <Footer />
</Layout>

<style>
  /* ===== Hero Section ===== */
  #hero {
    @apply pb-6 pt-8;
  }
  #hero h1 {
    @apply my-4 inline-block sm:my-8;
  }
  #hero .rss-link {
    @apply mb-6;
  }
  #hero .rss-icon {
    @apply mb-2 h-6 w-6 scale-110 fill-white sm:mb-3 sm:scale-125;
  }
  #hero p {
    @apply my-2;
  }
  .social-wrapper {
    @apply mt-4 flex flex-col sm:flex-row sm:items-center;
  }
  .social-links {
    @apply mb-1 mr-2 whitespace-nowrap sm:mb-0;
  }
  
  /* Hero Redesign Specific */
  .hero-container {
    @apply rounded-xl bg-[#182566] text-white p-6 sm:p-10 mb-8 shadow-lg;
  }
  .hero-cta-wrapper {
    @apply mt-8 flex flex-col sm:flex-row gap-4 items-center;
  }
  .hero-btn-primary {
    @apply bg-white text-[#182566] px-6 py-3 rounded-md font-bold hover:bg-gray-100 transition-colors w-full sm:w-auto;
  }
  .hero-btn-secondary {
    @apply border-2 border-white text-white px-6 py-3 rounded-md font-bold hover:bg-white hover:text-[#182566] transition-colors w-full sm:w-auto;
  }

  /* Force Socials inside the hero to be white */
  .hero-socials :global(svg) {
    @apply fill-white hover:opacity-80 transition-opacity;
  }

  /* ===== Featured & Recent Posts Sections ===== */
  #featured,
  #recent-posts {
    @apply pb-6 pt-12;
  }
  #featured h2,
  #recent-posts h2 {
    @apply text-2xl font-semibold tracking-wide;
  }
  .all-posts-btn-wrapper {
    @apply my-8 text-center;
  }
</style>
